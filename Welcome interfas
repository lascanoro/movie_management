def mostrar_bienvenida():
    print("Welcome to the Super Movie Rental Management System! c:")
    print("Please choose a user: c:")
    print("1. Fulano")
    print("2. Fulana")
    print("3. Fulene")

def elegir_usuario():
    while True:
        opcion = input("Introduce el número del usuario (1-3): ")
        if opcion in ['1', '2', '3']:
            if opcion == '1':
                usuario = "Fulano"
            elif opcion == '2':
                usuario = "Fulana"
            elif opcion == '3':
                usuario = "Fulene"
            print(f"¡Welcome, {user}! Now ypu are in the main Menú.")
            break
        else:
            print("Invalid option :c. Please choose a number between 1 and 3.")

# Llamada a las funciones
mostrar_bienvenida()
elegir_usuario()
