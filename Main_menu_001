def main():
    while True:  # Bucle principal que se mantiene hasta que el usuario decida salir
        try:
            # Mostrar opciones al usuario
            option = int(input(''' How can we assist you today?
            1: Rent a Movie!
            2: Return your rented Movies?
            3: Administrate the movie information...
            4: Exit the program
            Please enter your option (1-4): \n'''))
            
            if option == 1:
                rent_.rent_()  # Proceso de renta y recomendacion de titulos
            elif option == 2:
                giveback.giveback()  # Proceso de devolución
            elif option == 3:
                movie_.movie_()  # Mostrar lista de películas y administrarlas
            elif option == 4:
                print("Thank you for using our service. Goodbye!")
                sys.exit()  # Salir del programa
            else:
                print("Invalid option. Please enter a number between 1 and 4.")

        except ValueError:
            print("Please enter a valid integer option.")

        # Preguntar si desea continuar
        continue_option = input("Press 'Y' to continue or any other key to exit: ").strip().upper()
        if continue_option != 'Y':
            print("Thank you for using our service. Goodbye!")
            break  # Salir del bucle y finalizar el programa

if __name__ == "__main__":
    main()
